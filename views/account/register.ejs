<h1> <%- title %> </h1>

<!-- Display error messages prominently -->
<div class="error-messages">
    <% if (errors && errors.length) { %>
        <% errors.array().forEach(error => { %>
            <p class="error"><%= error.msg %></p>
        <% }) %>
    <% } %>
</div>

<div class="login-container">
    <form action="/account/register" method="post">
        <p>ALL FIELDS ARE REQUIRED</p>
        
        <div class="input-group">
            <label for="first-name">First Name</label>
            <input type="text" id="first-name" name="account_firstname" placeholder="Enter your first name" required 
            value="<%= account_firstname || '' %>">
        </div>

        <div class="input-group">
            <label for="last-name">Last Name</label>
            <input type="text" id="last-name" name="account_lastname" placeholder="Enter your last name" required 
            value="<%= account_lastname || '' %>">
        </div>

        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="account_email" placeholder="Enter your email" required 
            value="<%= account_email || '' %>">
        </div>

        <div class="input-group password-group">
            <label for="password">Password</label>
            <div class="password-wrapper">
                <input type="password" name="account_password" id="pword" placeholder="Enter your password" required 
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                    title="Password must be at least 12 characters long and include 1 uppercase letter, 1 number, and 1 special character.">
            </div>
            
            <p class="password-instructions">Password must be a minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.</p>
            <button type="button" id="pswdBtn">Show</button>
        </div>
        
        <button type="submit" class="btn">Register</button>
    </form>

    <p class="signup-text">
        Already have an account? <a href="/account/login">Login</a>
    </p>
</div>
