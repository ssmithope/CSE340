<h1> <%- title %> </h1>
<%- messages() %>

<div class="login-container">
    
    <form action="/account/login" method="POST">
        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="account_email" placeholder="Enter your email" required>
        </div>

        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="account_password" placeholder="Enter your password" required 
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>

        <p class="password-instructions">Password must be a minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.</p>

        <button type="submit" class="btn">Login</button>
    </form>

    <p class="signup-text">Don't have an account? <a href="/account/register">Sign up</a></p>
</div>
