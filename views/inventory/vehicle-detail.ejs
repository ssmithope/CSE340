<!DOCTYPE html>
<html lang="en-US">
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <% include('../partials/navigation.ejs'); %>
  </header>
  <main>
    <h1><%= vehicle.make %> <%= vehicle.model %></h1>
    <section class="vehicle-detail">
      <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.make %> <%= vehicle.model %>">
      <div>
        <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
        <p><strong>Price:</strong> $<%= vehicle.inv_price %></p>
        <p><strong>Mileage:</strong> <%= vehicle.inv_miles %> miles</p>
        <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
      </div>
    </section>
    <section class="upgrades">
      <h2>Available Upgrades</h2>
      <ul>
        <% upgrades.forEach(upgrade => { %>
          <li>
            <img src="<%= upgrade.image %>" alt="<%= upgrade.name %>">
            <p><%= upgrade.name %></p>
          </li>
        <% }) %>
      </ul>
    </section>
  </main>
  <footer>
    <% include('../partials/footer.ejs'); %>
  </footer>
</body>
</html>
