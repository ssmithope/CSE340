<main>
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

  <div class="vehicle-detail-wrapper">
    <% if (vehicle && vehicle.inv_image && vehicle.inv_make && vehicle.inv_model) { %>
      <div class="vehicle-detail-image">
        <img src="/<%= vehicle.inv_image %>" 
             alt="<%= vehicle.inv_make ? vehicle.inv_make : 'Vehicle' %> <%= vehicle.inv_model ? vehicle.inv_model : '' %> on CSE Motors">
      </div>
      <div class="vehicle-info">
        <p class="info-header"><%= vehicle.inv_make %> <%= vehicle.inv_model %> Details</p>
        <% if (vehicle.inv_description) { %>
          <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
        <% } %>
        <% if (vehicle.inv_price) { %>
          <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></p>
        <% } %>
        <% if (vehicle.inv_color) { %>
          <p><strong>Color:</strong> <%= vehicle.inv_color %></p>
        <% } %>
        <% if (vehicle.inv_miles) { %>
          <p><strong>Miles:</strong> <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %> miles</p>
        <% } %>
      </div>
    <% } else { %>
      <p>Vehicle details not available.</p>
    <% } %>
  </div>
</main>
