<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || "Add New Vehicle" %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <!-- Dynamic navigation bar -->
        <%- nav %>
    </header>

    <main>
        <!-- Page Title -->
        <h1><%= title || "Add New Vehicle" %></h1>

        <!-- Flash Message -->
        <% if (flash) { %>
            <div class="flash-message">
                <%= flash %>
            </div>
        <% } %>

        <!-- Error Messages -->
        <% if (errors) { %>
            <div class="error-messages">
                <% errors.forEach(function(error) { %>
                    <p><%= error.msg %></p>
                <% }); %>
            </div>
        <% } %>

        <!-- Inventory Form -->
        <div class="form-container">
            <form action="/inv/add-inventory" method="POST">
                <label for="classification">Classification:</label>
                <%= classificationSelect %> <!-- Dynamically generated dropdown -->

                <label for="make">Make:</label>
                <input type="text" id="make" name="inv_make" required 
                       value="<%= typeof locals !== 'undefined' && locals.inv_make ? locals.inv_make : '' %>" 
                       title="Please enter the vehicle's make">

                <label for="model">Model:</label>
                <input type="text" id="model" name="inv_model" required 
                       value="<%= typeof locals !== 'undefined' && locals.inv_model ? locals.inv_model : '' %>" 
                       title="Please enter the vehicle's model">

                <label for="year">Year:</label>
                <input type="number" id="year" name="inv_year" required min="1900" max="<%= new Date().getFullYear() %>" 
                       value="<%= typeof locals !== 'undefined' && locals.inv_year ? locals.inv_year : '' %>" 
                       title="Please enter the year of manufacture">

                <label for="description">Description:</label>
                <textarea id="description" name="inv_description" required 
                          title="Please provide a description of the vehicle"><%= typeof locals !== 'undefined' && locals.inv_description ? locals.inv_description : '' %></textarea>

                <label for="image">Image URL:</label>
                <input type="text" id="image" name="inv_image" required 
                       value="<%= typeof locals !== 'undefined' && locals.inv_image ? locals.inv_image : '' %>" 
                       title="Please provide the URL for the vehicle's image">

                <label for="thumbnail">Thumbnail URL:</label>
                <input type="text" id="thumbnail" name="inv_thumbnail" required 
                       value="<%= typeof locals !== 'undefined' && locals.inv_thumbnail ? locals.inv_thumbnail : '' %>" 
                       title="Please provide the URL for the vehicle's thumbnail image">

                <label for="price">Price:</label>
                <input type="number" id="price" name="inv_price" required min="0" step="0.01" 
                       value="<%= typeof locals !== 'undefined' && locals.inv_price ? locals.inv_price : '' %>" 
                       title="Please provide the vehicle's price">

                <label for="miles">Miles:</label>
                <input type="number" id="miles" name="inv_miles" required min="0" 
                       value="<%= typeof locals !== 'undefined' && locals.inv_miles ? locals.inv_miles : '' %>" 
                       title="Please provide the mileage of the vehicle">

                <label for="color">Color:</label>
                <input type="text" id="color" name="inv_color" required 
                       value="<%= typeof locals !== 'undefined' && locals.inv_color ? locals.inv_color : '' %>" 
                       title="Please provide the color of the vehicle">

                <button type="submit" class="btn">Add Vehicle</button>
            </form>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Vehicle Management System</p>
    </footer>
</body>
</html>
