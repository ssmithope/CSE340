<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || "Add Vehicle Classification" %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <!-- Dynamic navigation bar -->
        <%- nav %>
    </header>

    <main>
        <!-- Page Title -->
        <h1><%= title || "Add Vehicle Classification" %></h1>

        <!-- Flash Message -->
        <% if (flash) { %>
            <div class="flash-message"><%= flash %></div>
        <% } %>

        <!-- Error Messages -->
        <% if (errors) { %>
            <div class="error-messages">
                <% errors.forEach(function(error) { %>
                    <p><%= error.msg %></p>
                <% }); %>
            </div>
        <% } %>

        <!-- Form Section -->
        <div class="form-container">
            <form name="addClassificationForm" action="/inv/add-classification" method="POST">
                <p class="instructions">* Name must contain only alphabetic characters (letters).</p>
                
                <label for="classification_name">Classification Name:</label>
                <input type="text" id="classification_name" name="classification_name" 
                       required pattern="[A-Za-z\s]+" 
                       title="Name must only contain alphabetic characters and spaces."
                       value="<%= typeof locals !== 'undefined' && locals.classification_name ? locals.classification_name : '' %>">
                
                <button class="btn" type="submit">Add Classification</button>
            </form>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Vehicle Management System</p>
    </footer>
</body>
</html>
